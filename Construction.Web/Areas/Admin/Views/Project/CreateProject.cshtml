@model Project
@{
    ViewData["Title"] = "CreateProject";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Yeni Proje Girişi</h5>
            </div>
            <div class="card-body">

                

                <form method="post" action="/Admin/Project/CreateProject" enctype="multipart/form-data">

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div asp-validation-summary="All" class="text-danger mb-3 border p-3"></div>
                    }

                    <div class="mb-3">
                        <label class="form-label">Proje Başlığı</label>
                        <input type="text" class="form-control" asp-for="Title" placeholder="Örn: Vadi İstanbul Konutları" />
                    </div>

                    

                    <div class="mb-3">
                        <label class="form-label">Kategori</label>
                        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.v, "--- Kategori Seçiniz ---", new { @class = "form-control" })
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Lokasyon</label>
                        <input type="text" class="form-control" asp-for="Location" placeholder="Örn: Sarıyer, İstanbul" />
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Başlangıç Fiyatı (TL)</label>
                            <input type="number" class="form-control" asp-for="MinPrice" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Tamamlanma Oranı (%)</label>
                            <input type="range" class="form-range" asp-for="CompleetionRate" min="0" max="100" id="customRange1">
                            <div class="text-center small">Değer: <span id="rangeValue">50</span>%</div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Durum</label>
                        <input type="text" class="form-control" asp-for="ProjectStatus" placeholder="Örn: Satışta, Yapım Aşamasında" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Kapak Görseli</label>
                        <input type="file" class="form-control" name="imageFile" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label" asp-for="Description">Proje Açıklaması</label>
                        <textarea class="form-control" asp-for="Description" rows="4" placeholder="Proje hakkında detaylı bilgi..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-check form-switch mb-3">
                        <input class="form-check-input" type="checkbox" asp-for="IsActive" id="isActiveSwitch" checked />

                        <label class="form-check-label text-success" for="isActiveSwitch" id="isActiveLabel">
                            Proje Yayında (Aktif)
                        </label>
                    </div>

                    <button type="submit" class="btn btn-primary">Kaydet</button>
                    <a href="/Admin/Project/Index" class="btn btn-secondary">İptal</a>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('customRange1').addEventListener('input', function (e) {
        document.getElementById('rangeValue').innerText = e.target.value;
    });
</script>
<script>
    // 1. Elementleri seçiyoruz
    const switchElement = document.getElementById('isActiveSwitch');
    const labelElement = document.getElementById('isActiveLabel');

    // 2. Değişiklik fonksiyonu
    function updateSwitchLabel() {
        if (switchElement.checked) {
            // Eğer tikliyse:
            labelElement.innerText = "Proje Yayında (Aktif)";
            labelElement.classList.remove('text-danger'); // Kırmızıyı sil
            labelElement.classList.add('text-success');   // Yeşil yap
        } else {
            // Eğer tikli değilse:
            labelElement.innerText = "Proje Yayında Değil (Pasif)";
            labelElement.classList.remove('text-success'); // Yeşili sil
            labelElement.classList.add('text-danger');     // Kırmızı yap
        }
    }

    // 3. Tıklanma olayını dinle (Her değiştiğinde çalışır)
    switchElement.addEventListener('change', updateSwitchLabel);

    // 4. Sayfa ilk açıldığında da çalıştır (Update sayfasında Pasif gelirse doğru görünsün diye)
    // Create sayfasında zaten checked geliyor ama Update için bu satır önemli.
    updateSwitchLabel();
</script>
