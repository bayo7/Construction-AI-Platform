@model Category

@{
    ViewData["Title"] = "Kategori Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Kategori Düzenleme</h5>
            </div>
            <div class="card-body">
                <form method="post" action="/Admin/Category/UpdateCategory">

                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label class="form-label" asp-for="CategoryName">Kategori Adı</label>
                        <div class="input-group input-group-merge">
                            <span class="input-group-text"><i class="bx bx-category"></i></span>
                            <input type="text" class="form-control" asp-for="CategoryName" />
                        </div>
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                    </div>

                    <div class="mb-3">
                        <div class="form-check form-switch mb-2">
                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" asp-for="IsActive" />
                            <label class="form-check-label" for="flexSwitchCheckChecked">
                                Kategori Aktif mi?
                            </label>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-warning">Güncelle</button>
                    <a href="/Admin/Category/Index" class="btn btn-secondary">İptal</a>
                </form>
            </div>
        </div>
    </div>
</div>