@using Construction.Entity.Entities
@model List<Category>

@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Kategori Listesi</h5>
        <a href="/Admin/Category/AddCategory" class="btn btn-primary">Yeni Kategori Ekle</a>
    </div>

    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Kategori Adı</th>
                    <th>Durum</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="4" class="text-center">Henüz hiç kategori eklenmemiş.</td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td><strong>@item.CategoryName</strong></td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-label-success me-1">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-label-danger me-1">Pasif</span>
                                }
                            </td>
                            <td>
                                <a href="/Admin/Category/UpdateCategory/@item.Id" class="btn btn-sm btn-outline-info">Düzenle</a>
                                <a href="/Admin/Category/DeleteCategory/@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Bu kategoriyi silmek istediğinize emin misiniz?');">
                                    <i class="bx bx-trash"></i> Sil
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>