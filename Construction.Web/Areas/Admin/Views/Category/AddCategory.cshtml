@model Category

@{
    ViewData["Title"] = "Yeni Kategori Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Yeni Kategori Girişi</h5>
                <small class="text-muted float-end">Kategori Formu</small>
            </div>
            <div class="card-body">
                <form method="post" action="/Admin/Category/AddCategory">

                    <div class="mb-3">
                        <label class="form-label" asp-for="CategoryName">Kategori Adı</label>

                        <div class="input-group input-group-merge">
                            <span class="input-group-text"><i class="bx bx-category"></i></span>

                            <input type="text" class="form-control" asp-for="CategoryName" placeholder="Örn: Konut Projeleri" />
                        </div>

                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Kaydet</button>
                    <a href="/Admin/Category/Index" class="btn btn-danger">İptal</a>
                </form>
            </div>
        </div>
    </div>
</div>