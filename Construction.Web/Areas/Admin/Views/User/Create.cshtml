@using Construction.Web.Models
@model UserCreateViewModel

@{
    ViewData["Title"] = "Yeni Kullanıcı Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Yeni Sistem Kullanıcısı</h5>
            </div>
            <div class="card-body">

                @if (!ViewData.ModelState.IsValid)
                {
                    <div asp-validation-summary="All" class="text-danger mb-3 border p-3 rounded"></div>
                }

                <form method="post" action="/Admin/User/Create">

                    <div class="mb-3">
                        <label class="form-label" asp-for="Name">Ad Soyad</label>
                        <input type="text" class="form-control" asp-for="Name" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label" asp-for="UserName">Kullanıcı Adı</label>
                        <input type="text" class="form-control" asp-for="UserName" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label" asp-for="Email">E-Posta Adresi</label>
                        <input type="email" class="form-control" asp-for="Email" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label" asp-for="Password">Şifre</label>
                        <input type="password" class="form-control" asp-for="Password" required />
                        <small class="text-muted">Şifre en az 6 karakter olmalı; büyük harf, küçük harf, rakam ve özel karakter (*,!,? vs.) içermelidir.</small>
                    </div>

                    <div class="form-check form-switch mb-3">
                        <input class="form-check-input" type="checkbox" asp-for="IsActive" id="isActiveSwitch" />
                        <label class="form-check-label text-success" for="isActiveSwitch" id="isActiveLabel">
                            Hesap Aktif
                        </label>
                    </div>

                    <button type="submit" class="btn btn-primary">Kaydet</button>
                    <a href="/Admin/User/Index" class="btn btn-secondary">İptal</a>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    const switchElement = document.getElementById('isActiveSwitch');
    const labelElement = document.getElementById('isActiveLabel');

    function updateSwitchLabel() {
        if (switchElement.checked) {
            labelElement.innerText = "Hesap Aktif";
            labelElement.classList.remove('text-danger');
            labelElement.classList.add('text-success');
        } else {
            labelElement.innerText = "Hesap Pasif";
            labelElement.classList.remove('text-success');
            labelElement.classList.add('text-danger');
        }
    }

    switchElement.addEventListener('change', updateSwitchLabel);
    updateSwitchLabel();
</script>