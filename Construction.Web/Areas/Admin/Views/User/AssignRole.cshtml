@model List<Construction.Web.Models.RoleAssignViewModel>

@{
    ViewData["Title"] = "Rol Atama";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xl-6">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Kullanıcı Yetkilendirme</h5>
                <small class="text-muted">Şu anda <strong>@ViewBag.UserName</strong> adlı kullanıcının yetkilerini düzenliyorsunuz.</small>
            </div>
            <div class="card-body">

                <form method="post" action="/Admin/User/AssignRole">

                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <div class="form-check mb-2">
                            <input type="hidden" asp-for="@Model[i].RoleId" />
                            <input type="hidden" asp-for="@Model[i].RoleName" />

                            <input type="checkbox" asp-for="@Model[i].RoleExist" class="form-check-input" id="role_@i" />
                            <label class="form-check-label" for="role_@i">
                                @Model[i].RoleName
                            </label>
                        </div>
                    }

                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary">Değişiklikleri Kaydet</button>
                        <a href="/Admin/User/Index" class="btn btn-secondary">İptal</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>