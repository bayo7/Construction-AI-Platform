@model List<AppRole>

@{
    ViewData["Title"] = "Rol Yönetimi";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Sistem Rolleri</h5>
        <a href="/Admin/Role/Create" class="btn btn-primary">Yeni Rol Ekle</a>
    </div>

    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Rol Adı</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @if (Model == null || Model.Count == 0)
                {
                    <tr>
                        <td colspan="3" class="text-center">Sistemde henüz kayıtlı bir rol bulunmamaktadır.</td>
                    </tr>
                }
                else
                {
                    int count = 0;
                    foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td><strong>@count</strong></td>
                            <td><span class="badge bg-label-info">@item.Name</span></td>
                            <td>
                                <a href="/Admin/Role/Delete/@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Bu rolü silmek istediğinize emin misiniz?');">
                                    <i class="bx bx-trash"></i> Sil
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>